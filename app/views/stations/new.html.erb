<div class="container mt-5">
  <h2>New Station</h2>

  <%= form_for @station, url: stations_path, method: :post, html: { class: 'form' } do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :access_key, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Station', class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>